@model RegisterUserViewModel

@{
    ViewData["Title"] = "Index";
}


<section id="form">
    <!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-1">
                <h2 class="or">OR</h2>
            </div>
            <div class="col-sm-4">
                <div class="signup-form">
                    <!--sign up form-->
                    <h2>Регистрация нового пользователя</h2>
                    <form action="Register" asp-antiforgery="true">
                        <div asp-validation-summary="ModelOnly" class="text-danger" />

                        <input asp-for="UserName" placeholder="Логин" />
                        <span asp-validation-for="UserName" />

                        <input asp-for="Password" placeholder="Пароль" />
                        <span asp-validation-for="Password" />

                        <input asp-for="PasswordConfirm" placeholder="Подтверждение пароля" />
                        <span asp-validation-for="PasswordConfirm" />

                        <button type="submit" class="btn btn-default">Зарегистрироваться</button>
                    </form>
                </div><!--/sign up form-->
            </div>
        </div>
    </div>
</section><!--/form-->