@model IEnumerable<WebMarket.Models.Employee>

<!DOCTYPE html>
@{
    @addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Сотрудники</title>
</head>
<body>
    <h3> Сотрудники </h3>

    <table>
        <thead>
            <tr>
                <th>#</th>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>Отчество</th>
                <th>Возраст</th>
                <th>Карта сотрудника</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.LastName</td>
                    <td>@employee.FirstName</td>
                    <td>@employee.Patronymic</td>
                    <td>@employee.Age</td>
                    <td><a asp-controller="Home" asp-action="Details" asp-route-id="@employee.Id">Детали</a></td>
                </tr>
            }
        </tbody>

    </table>

    <p>

        <a href ="~/">Домой</a>

    </p>

</body>
</html>
